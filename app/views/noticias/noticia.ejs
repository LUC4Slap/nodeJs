<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="utf-8" />
    <title>Notícia</title>
  </head>
  <body>
    <h1>Notícia</h1>

    <table>
      <tr>
        <td>ID</td>
        <td>Titulo</td>
        <td>Noticia</td>
      </tr>

      <tr>
        <% if(noticia !== undefined) { %>
        <td><%= noticia[0].id_noticia %></td>
        <td><%= noticia[0].titulo %></td>
        <td><%= noticia[0].noticia %></td>
        <% } %>
        <td>Não há Noticia</td>
      </tr>
    </table>
  </body>
</html>
