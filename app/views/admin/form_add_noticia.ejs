<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="utf-8" />
    <title>Formulário de cadastro de Notícia</title>
    <style>
      .campos {
        display: flex;
        width: 50%;
        flex-direction: column;
      }

      .campos > input[type='text'] {
        height: 30px;
      }

      .formulario {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
      }

      .formulario > input[type='submit'] {
        height: 40px;
        width: 50%;
        display: block;
        background: #3ecc93;
        border: #3ecc93;
        color: #fff;
        font-size: 18px;
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <h1>Adicionar notícia</h1>
    <br />
    <hr />

    <% if(validacao) { %>

    <ul>
      <% for(let i = 0; i < validacao.length; i++) { %>

      <li><%= validacao[i].msg %></li>

      <% } %>
    </ul>

    <% } %>

    <form action="/noticias/salvar" method="post" class="formulario">
      <div class="campos">
        <label for="titulo">Título</label>
        <input
          type="text"
          name="titulo"
          id="titulo"
          placeholder="Titulo Noticias"
          value="<%= noticia.titulo %>"
        />
      </div>
      <br />
      <div class="campos">
        <label for="resumo">Resumo</label>
        <input
          type="text"
          name="resumo"
          id="resumo"
          placeholder="Resumo Noticias"
          value="<%= noticia.resumo %>"
        />
      </div>
      <br />
      <div class="campos">
        <label for="autor">Nome Autor</label>
        <input
          type="text"
          name="autor"
          id="autor"
          placeholder="Autor da Noticia"
          value="<%= noticia.autor %>"
        />
      </div>
      <br />
      <div class="campos">
        <label for="data">Data da Noticia</label>
        <input
          type="date"
          name="data"
          id="data"
          placeholder="Data da Noticia"
          value="<%= noticia.data %>"
        />
      </div>
      <br />
      <br />
      <div class="campos">
        <label for="noticia">Noticía</label>
        <textarea name="noticia" id="noticia" cols="30" rows="5">
          <%= noticia.noticia %>
        </textarea>
      </div>
      <br />
      <input type="submit" value="Cadastrar Noticía" />
    </form>
  </body>
</html>
